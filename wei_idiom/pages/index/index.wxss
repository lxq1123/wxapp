.fanslist {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.7);
    color: #515151;
}

.fanslist .box {
    width: 690rpx;
    margin: 50rpx 30rpx 0;
    border-radius: 20rpx;
    background-color: #ffffff;
}

.fanslist .box .title {
    height: 104rpx;
    line-height: 104rpx;
    position: relative;
    letter-spacing: 8rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.fanslist .box .title .options {
    margin: 0 auto;
    width: 468rpx;
    height: 104rpx;
}

.fanslist .box .title .op {
    text-align: center;
    float: left;
    width: 468rpx;
    font-size: 36rpx;
    height: 64rpx;
    line-height: 64rpx;
    margin-top: 20rpx;
    color: #515151;
}

.fanslist .box .title .close {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 104rpx;
    height: 104rpx;
}

.fanslist .box .title .close image {
    width: 36rpx;
    height: 36rpx;
    margin-left: 34rpx;
    margin-top: 34rpx;
}

.fanslist .box .list {
    overflow: hidden;
}

.fanslist .box .list .item {
    height: 96rpx;
    line-height: 96rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
}

.fanslist .box .list .item .rank {
    width: 94rpx;
    text-align: center;
    float: left;
}

.fanslist .box .list .item .avatar {
    float: left;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    overflow: hidden;
}

.fanslist .box .list .item .nickname {
    float: left;
    width: 240rpx;
    height: 96rpx;
    margin-left: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.fanslist .box .list .item .num {
    float: left;
    width: 200rpx;
    height: 96rpx;
    text-align: center;
    font-size: 26rpx;
}

.fanslist .box .list .item .num .hot-icon {
    width: 24rpx;
    height: 24rpx;
    float: left;
    margin-top: 36rpx;
    margin-left: 36rpx;
}

.fanslist .back {
    width: 600rpx;
    height: 80rpx;
    font-size: 36rpx;
    background-color: #5735B7;
    color: #ffffff;
    margin: 20rpx auto;
    border-radius: 40rpx;
    text-align: center;
    line-height: 80rpx;
    font-family: 'mxjxk';
}

page {
    background-color: #5735B7;
    color: white;
    overflow-x: hidden;
}

.pg-container {
    margin-left: 30rpx;
    margin-right: 30rpx;
    box-sizing: border-box;
    padding-bottom: 26rpx;
    width: 690rpx;
}

.broadbox {
    height: 50rpx;
    width: 100%;
    margin-top: 10rpx;
}

.broadcast {
    height: 50rpx;
    overflow: hidden;
    background-color: rgba(255,255,255,.2);
    border-radius: 25rpx;
    width: 690rpx;
}

.broadcast .icon {
    width: 26rpx;
    height: 26rpx;
    margin: 12rpx 20rpx;
    float: left;
}

.broadcast .itemlist {
    width: 600rpx;
}

.broadcast .itemlist .item {
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 50rpx;
    font-size: 28rpx;
}

.broadcast .itemlist .item:first-child {
    animation: show 15s linear infinite;
}

@-webkit-keyframes show {
    0% {
        margin-top: -300rpx;
    }

    5% {
        margin-top: -200rpx;
    }

    33.33% {
        margin-top: -200rpx;
    }

    38.33% {
        margin-top: -100rpx;
    }

    66.66% {
        margin-top: -100rpx;
    }

    71.66% {
        margin-top: 0rpx;
    }

    99.99% {
        margin-top: 0rpx;
    }

    100% {
        margin-top: -300rpx;
    }
}

@keyframes show {
    0% {
        margin-top: -300rpx;
    }

    5% {
        margin-top: -200rpx;
    }

    33.33% {
        margin-top: -200rpx;
    }

    38.33% {
        margin-top: -100rpx;
    }

    66.66% {
        margin-top: -100rpx;
    }

    71.66% {
        margin-top: 0rpx;
    }

    99.99% {
        margin-top: 0rpx;
    }

    100% {
        margin-top: -300rpx;
    }
}

.mtop {
    height: 150rpx;
    width: 650rpx;
    margin-top: 32rpx;
}

.mtop .title {
    color: #FFF;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 90rpx;
    text-align: center;
    margin-top: 90rpx;
}

.mtop .title .title-img {
    height: 80rpx;
    width: 460rpx;
}

.mtop .desc {
    text-align: center;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 16rpx;
    letter-spacing: 2rpx;
}

.pg-container .info {
    height: 190rpx;
    border-radius: 16rpx;
    overflow: hidden;
    background-color: rgba(255,255,255,.1);
    margin-bottom: 32rpx;
}

.info .uinfo {
    margin-left: 20rpx;
    overflow: hidden;
    margin-top: 35rpx;
}

.info .uinfo .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    float: left;
    background-color: #ffffff;
}

.uinfo .detail {
    width: 510rpx;
    overflow: hidden;
    float: left;
}

.uinfo .detail .simple {
    width: 198rpx;
    height: 120rpx;
    float: left;
}

.info .detail .nickname,.info .detail .level,.info .uinfo .jinbi {
    width: 170rpx;
    float: left;
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 28rpx;
}

.info .nickname {
    border: none;
    padding: 0;
    text-align: left;
    color: white;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info .uinfo .jinbi {
    width: 260rpx;
    margin-left: 20rpx;
    position: relative;
}

.jinbi .with {
    width: 80rpx;
    float: left;
    margin-left: 18rpx;
    color: #E9760E;
    position: absolute;
    right: -6rpx;
    top: 0;
    text-align: center;
    letter-spacing: 2rpx;
}

.uinfo .jinbi .icon {
    margin: 14rpx;
    margin-left: 0;
    width: 32rpx;
    height: 32rpx;
    border-radius: 20rpx;
    float: left;
}

.uinfo .jinbi .num {
    float: left;
    line-height: 60rpx;
}

.options {
    margin-top: 32rpx;
    overflow: hidden;
}

.options .item {
    width: 150rpx;
    height: 132rpx;
    float: left;
    margin-bottom: 10rpx;
    margin-right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.options .item:nth-last-child(1) {
    margin-right: 0rpx;
}

.options .item image {
    width: 40rpx;
    height: 40rpx;
    display: block;
}

.options .item text {
    display: block;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 24rpx;
}

.begin {
    background-color: #5191FD;
    text-align: center;
    width: 650rpx;
    height: 100rpx;
    border: none;
    border-radius: 50rpx;
    font-size: 40rpx;
    font-weight: bold;
    line-height: 100rpx;
    margin: 32rpx auto;
    margin-top: 0rpx;
    position: relative;
    color: #ffffff;
}

.ad {
    border-radius: 12rpx;
    overflow: hidden;
    position: relative;
}

.ad .cl {
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    bottom: 50%;
    width: 300rpx;
    height: 84rpx;
    transform: translateX(-50%) translateY(50%);
    background-color: #A5DE37;
    border-radius: 42rpx;
    text-align: center;
    line-height: 76rpx;
    pointer-events: none;
    box-shadow: 0 12rpx 0 #8bc220,0 8rpx 3rpx rgba(0,0,0,0.3);
    font-weight: bold;
    font-size: 40rpx;
    letter-spacing: 2rpx;
    display: none;
}