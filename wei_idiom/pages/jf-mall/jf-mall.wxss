page {
    color: #FDFFFF;
    background-color: #5735B7;
}

.container {
    box-sizing: border-box;
}

.header {
    position: fixed;
    text-align: center;
    height: 80rpx;
    padding-top: 40rpx;
    line-height: 80rpx;
    font-size: 38rpx;
    overflow: hidden;
    width: 100%;
    z-index: 999;
    background-color: #5735B7;
}

.item-list {
    overflow: hidden;
    margin: 20rpx 35rpx;
    padding-bottom: 95rpx;
}

.item-list .item {
    border-radius: 10rpx;
    background-color: white;
    height: 205rpx;
    padding-top: 30rpx;
    margin-bottom: 16rpx;
}

.item-list .item .g-pic {
    float: left;
    width: 180rpx;
    height: 180rpx;
    margin: 0 40rpx;
}

.item-list .item .g-info {
    float: left;
    width: 410rpx;
}

.item-list .item .g-info .g-title {
    color: black;
    margin-top: 16rpx;
    line-height: 48rpx;
    height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item-list .item .g-info .g-price {
    position: relative;
    vertical-align: bottom;
    color: #ED380A;
    font-size: 24rpx;
    height: 66rpx;
}

.item-list .item .g-info .g-price .g-price-credit {
    float: left;
    height: 66rpx;
    line-height: 66rpx;
}

.item-list .item .g-info .g-price .g-price-credit .cost {
    font-size: 32rpx;
    display: inline-block;
}

.item-list .item .g-info .g-price .g-price-credit .original {
    display: inline-block;
    padding-left: 10rpx;
    padding-right: 10rpx;
    text-decoration: line-through;
}

.item-list .item .g-info .op {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
}

.item-list .item .g-info .op text {
    float: left;
    display: block;
    height: 48rpx;
    color: black;
    margin-right: 24rpx;
}

.item-list .item .g-info .op .subbtn {
    float: right;
    background-color: #ED380A;
    height: 48rpx;
    border-radius: 24rpx;
    text-align: center;
    padding: 0 24rpx;
    margin-right: 20rpx;
    line-height: 48rpx;
    color: white;
    border: none;
    font-size: 24rpx;
}

.item-list .item .g-info .op .subbtn-2 {
    background-color: #666666;
}

.tabbar {
    padding-top: 25rpx;
    width: 100%;
    position: fixed;
    height: 95rpx;
    bottom: 0;
}

.tabbar .tab {
    text-align: center;
    margin: 0 auto;
    background-color: rgba(255,255,255,.2);
    float: left;
    width: 240rpx;
    margin-left: 90rpx;
    border-radius: 35rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.copykfwx {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #5191FD;
    border-radius: 50rpx;
    text-align: center;
    font-size: 34rpx;
    letter-spacing: 2rpx;
    margin-top: 28rpx;
}