.com-page {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.2);
}

.list {
    width: 100%;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
}

.list .item {
    color: #4B4F52;
    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    font-size: 28rpx;
    border-bottom: 2rpx solid #EAEAEA;
}

.list .cancel {
    border-top: 12rpx solid #F7F7F7;
    border-bottom: none;
}

.list button {
    border: none;
    padding: 0;
}